pipeline {
    agent any

    environment {
        DOCKER_CREDENTIALS_ID = 'dockerhub_sk' // ID of the Docker credentials stored in Jenkins
        IMAGE_NAME = 'java_app'
        IMAGE_TAG = 'latest'
        REGISTRY_URL = 'docker.io' // URL of the Docker registry
    }

    stages {
        stage('Checkout') {
            steps {
                 checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'github_sk', url: 'https://github.com/saikiran232/java_app.git']])
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    docker.build("${IMAGE_NAME}:${IMAGE_TAG}")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Login to Docker registry
                    docker.withRegistry("https://${REGISTRY_URL}", DOCKER_CREDENTIALS_ID) {
                        // Push the Docker image
                        docker.image("${IMAGE_NAME}:${IMAGE_TAG}").push("${IMAGE_TAG}")
                    }
                }
            }
        }
    }

    post {
        always {
            // Clean up workspace if needed
            cleanWs()
        }
    }
}
